#########################################################################################################
#                                       MY I3WM CUSTOM CONFIG FILE                                      #                    
#########################################################################################################

## KEYBINDING {{{
# default Modifier to Super key. Alternatively, still enable Alt for floating window dragging and resizing
set $mod Mod4
set $alt Mod1

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $alt

# kill focused window
bindsym $alt+F4 kill

# change focus
bindsym $alt+h focus left
bindsym $alt+j focus down
bindsym $alt+k focus up
bindsym $alt+l right

# alternatively, you can use the cursor keys:
bindsym $alt+Left focus left
bindsym $alt+Down focus down
bindsym $alt+Up focus up
bindsym $alt+Right focus right

# move focused window
bindsym $alt+Shift+h move left
bindsym $alt+Shift+j move down
bindsym $alt+Shift+k move up
bindsym $alt+Shift+l right

# alternatively, you can use the cursor keys:
bindsym $alt+Shift+Left move left
bindsym $alt+Shift+Down move down
bindsym $alt+Shift+Up move up
bindsym $alt+Shift+Right move right

# split in orientation
bindsym $mod+h split h; exec notify-send 'tile horizontally'
bindsym $mod+v split v; exec notify-send 'tile vertically'
bindsym $mod+q split toggle

# next/previous workspace
bindsym $mod+Tab workspace next
bindsym $mod+Shift+Tab workspace previous

# enter fullscreen mode for the focused container
bindsym $alt+f fullscreen toggle

# change container layout (stacked, tabbed, toggle split)
bindsym $alt+Shift+s layout stacking
bindsym $alt+Shift+w layout tabbed
bindsym $alt+Shift+e layout toggle split

# toggle tiling / floating
bindsym $mod+Shift+space floating toggle

# change focus between tiling / floating windows
bindsym $mod+space focus mode_toggle

# focus the parent container
#bindsym $mod+a focus parent

# focus the child container
#bindsym $mod+d focus child

# switch to workspace
bindsym $alt+1 workspace $ws1
bindsym $alt+2 workspace $ws2
bindsym $alt+3 workspace $ws3
bindsym $alt+4 workspace $ws4
bindsym $alt+5 workspace $ws5
bindsym $alt+6 workspace $ws6
bindsym $alt+7 workspace $ws7
bindsym $alt+8 workspace $ws8
bindsym $alt+9 workspace $ws9
bindsym $alt+0 workspace $ws10

# move focused container to workspace
bindsym $alt+Shift+1 move container to workspace $ws1
bindsym $alt+Shift+2 move container to workspace $ws2
bindsym $alt+Shift+3 move container to workspace $ws3
bindsym $alt+Shift+4 move container to workspace $ws4
bindsym $alt+Shift+5 move container to workspace $ws5
bindsym $alt+Shift+6 move container to workspace $ws6
bindsym $alt+Shift+7 move container to workspace $ws7
bindsym $alt+Shift+8 move container to workspace $ws8
bindsym $alt+Shift+9 move container to workspace $ws9
bindsym $alt+Shift+0 move container to workspace $ws10

# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        bindsym h resize shrink width 10 px or 10 ppt
        bindsym j resize grow height 10 px or 10 ppt
        bindsym k resize shrink height 10 px or 10 ppt
        bindsym l resize grow width 10 px or 10 ppt

        # same bindings, but for the arrow keys
        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}
bindsym $alt+Shift+r mode "resize"

# reload the configuration file
bindsym $mod+Shift+c reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart
# exit i3 (logs you out of your X session)
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'"

# Press Ctrl+Alt+Tab will show log out menu
set $Locker i3lock && sleep 1
set $mode_system System (l) lock, (e) logout, (r) reboot, (s) shutdown
mode "$mode_system" {
  bindsym l exec --no-startup-id $Locker, mode "default"
  bindsym e exec --no-startup-id i3-msg exit, mode "default"
  bindsym r exec --no-startup-id systemctl reboot, mode "default"
  bindsym s exec --no-startup-id systemctl poweroff -i, mode "default"
  # back to normal: Enter or Escape
  bindsym Return mode "default"
  bindsym Escape mode "default"
}
bindsym Control+$alt+Delete mode "$mode_system"

# }}}

## APPLICATION SHORTCUTS {{{ 
bindsym $mod+t exec konsole                               # Terminal
bindsym $mod+w exec chromium                              # Web Browser
bindsym $mod+s exec steam                                 # Steam
bindsym $mod+f exec thunar                                # File Manager
bindsym $mod+m exec thunderbird                           # Email Browser

# take a screenshot with scrot, put it in Desktop folder
set $mode_screenshot Screenshot (Enter) Full Screen, (s) Select Region 
mode "$mode_screenshot" {
  bindsym Return exec --no-startup-id scrot 'screenshot-%Y-%m-%d_%H-%M.png' -e 'mv $f ~/Desktop/', mode "default"
  bindsym --release s exec --no-startup-id scrot 'screenshot-%Y-%m-%d_%H-%M.png' -s -e 'mv $f ~/Desktop/', mode "default"
  bindsym Escape mode "default"
}
bindsym Print mode "$mode_screenshot"

# rofi as dmenu replacement
bindsym $mod+grave exec rofi -show run -config ~/.i3/rofi_config
bindsym $alt+Tab exec rofi -show window -config ~/.i3/rofi_config

# }}}

## WORKSPACE NAMING AND PLACEMENT {{{
# workspace naming
set $ws1 1:
set $ws2 2:
set $ws3 3:
set $ws4 4:
set $ws5 5:
set $ws6 6:
set $ws7 7
set $ws8 8
set $ws9 9
set $ws10 10

# workspace placement
workspace $ws1 output $monleft
workspace $ws2 output $monright
workspace $ws3 output $monleft
workspace $ws4 output $monright
workspace $ws5 output $monleft
workspace $ws6 output $monright
workspace $ws7 output $monleft
workspace $ws8 output $monright
workspace $ws9 output $monleft
workspace $ws10 output $monright

# }}}

## AUTOSTART APPLICATIONS {{{
# daemons and applets
exec --no-startup-id cadence-session-start --maybe-system-start                 # JackAudio server
exec --no-startup-id pamac-tray                                                 # pamac
exec --no-startup-id nitrogen --restore; sleep 1; compton                       # Wallpaper and Compositor
exec --no-startup-id nm-applet                                                  # Network Manager applet
exec --no-startup-id /usr/lib/polkit-gnome/polkit-gnome-authentication-agent-1  # Gnome polkit
exec --no-startup-id xfce4-power-manager                                        # For screen timeout handling
exec --no-startup-id dropbox start                                              # Dropbox
exec --no-startup-id volumeicon                                                 # Volume applet
exec --no-startup-id /usr/local/bin/numlock                                     # Numlock on startup
exec --no-startup-id docky                                                      # Start Docky on startup
exec --no-startup-id $HOME/.conkyrc/.conkyrci3/start_conky_i3.sh                # Start Conky

# applications
exec --no-startup-id exec chromium --new-window www.youtube.com
exec --no-startup-id exec chromium --new-window
exec --no-startup-id exec thunar
exec --no-startup-id exec konsole

# }}}

## WINDOW RULES {{{
floating_maximum_size 1676 x 948          # maximum size so that the window will not overlap monitor

# window floating by default
for_window [window_type="dialog,utility,toolbar,splash,menu,dropdown_menu,popup_menu,tooltip,notification"] floating enable border pixel 1
for_window [window_role="pop-up"] floating enable
for_window [window_role="prefwindow"] floating enable
for_window [window_role="browser"] floating enable resize set 1000 640, move to workspace $ws2
for_window [class="notify"] floating enable border pixel 1
for_window [title="File Transfer*"] floating enable
for_window [class="Galculator"] floating enable
for_window [class="Lxappearance"] floating enable sticky enable border normal
for_window [class="Nitrogen"] floating enable sticky enable border normal
for_window [class="Oblogout"] fullscreen enable
for_window [class="octopi"] floating enable
for_window [class="Pamac-manager"] floating enable
for_window [class="Pavucontrol"] floating enable
for_window [class="(?VirtualBox"] floating enable
for_window [class="Skype"] floating enable
for_window [class="Steam"] floating enable, move to workspace $ws4
for_window [class="(?i)nvidia-settings"] floating enable
for_window [class="smplayer"] floating enable, move to workspace $ws3
for_window [class="Eog"] floating enable
for_window [title="YouTube - Chromium" window_role="browser" class="chromium"] move to workspace $ws1

# }}}

## APPEARANCE {{{
#colors
set $border-color #000000
set $bg-color #2B2B2C
set $inac-bg-color #2B2B2C
set $text-color #FFFFFF
set $inac-text-color #AFAFB1
set $urgent-bg-color #5d6464
set $indi-color #4080FB
set $urgent-text-color #DC322f

# title bar colors
#                         border            background        text                indicator
client.focused            $bg-color         $bg-color         $text-color         $indi-color
client.unfocused          $bg-color         $inac-bg-color    $inac-text-color    $indi-color
client.focused_inactive   $bg-color         $inac-bg-color    $inac-text-color    $indi-color
client.urgent             $urgent-bg-color  $urgent-bg-color  $urgent-text-color  $indi-color

# bar
set $monleft HDMI-0
set $monright DVI-I-0

bar {
  tray_output $monright
  status_command i3blocks
  font pango:Ubuntu, Awesome 11
  position top
  colors {
         #                  border            background        text
         focused_workspace  $border-color     $bg-color         $text-color
         inactive_workspace $border-color     $inac-bg-color    $inac-text-color
         urgent_workspace   $urgent-bg-color  $urgent-bg-color  $urgent-text-color
  }
}

# font
font pango:Ubuntu, Awesome 11

# window title
for_window [class=".*"] title_format "<b> %title</b>"
# }}}


